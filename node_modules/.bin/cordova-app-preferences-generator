#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../cordova-plugin-app-preferences/bin/build-app-settings.js" "$@"
  ret=$?
else 
  node  "$basedir/../cordova-plugin-app-preferences/bin/build-app-settings.js" "$@"
  ret=$?
fi
exit $ret
